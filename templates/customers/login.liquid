<div class="container">

    {% if store.customer_accounts_optional %}
        <p>Luo jos huvittaa</p>
    {% elsif store.customer_accounts_require_approval %}
        <p>Vain kauppiaan hyväksynnällä</p>
    {% else %}
        <p>Asiakastili vaaditaan</p>
    {% endif %}

    {% unless store.customer_accounts_optional %}
        {% if store.catalog_browsing_requires_account %}
            <p>Äläpä selaa ennen ku tulee lupa</p>
        {% else %}
            <p>Tutki valikoimaa, mutta kirjautuminen vaaditaan</p>
        {% endif %}
    {% endunless %}


    {% form 'login' %}

        <div class="form-group">

            <label>{{ 'account.information.email' | t }}</label>
            <input type="email" class="form-control" name="email" id="login-email" placeholder="{{ 'login.email_placeholder' | t }}" value="{{ form.submitted.email | escape }}" required>

        </div>

        <div class="form-group">

            <label class="d-block">
                <div class="row align-items-center">
                    <div class="col">{{ 'account.information.password' | t }}</div>
                    <div class="col col-auto small"><a href="{{ 'forgotten_password' | link }}">{{ 'login.forgot_password' | t }}</a></div>
                </div>
            </label>
            <input type="password" class="form-control" name="password" id="login-password" placeholder="{{ 'login.password_placeholder' | t }}" value="{{ form.submitted.password | escape }}" required>

        </div>

        {% if form.error %}

            <p class="text-error">{{ form.error | prepend:'form.error.' | t }}</p>

        {% endif %}

        <button type="submit" class="btn btn-primary btn-block">{{ 'login.cta' | t }}</button>

        <p class="text-center">{{ 'login.new_customer' | t }} <a href="{{ 'register' | link }}">{{ 'login.register' | t }}</a></p>

    {% endform %}

</div>