{%- assign sectionTitle = 'password_recover.title' | t -%}
{%- assign sectionDescription = 'password_recover.description' | t -%}

{%- capture sectionContent -%}

    {% form 'recover_customer_password' %}

        {% if form.posted_successfully? %}

            <p class="mb-5">
                {{ 'password_recover.success' | t }}
            </p>

            <a href="{{ routes.account_login_url }}" class="btn btn-section btn-block">
                {{ 'password_recover.login' | t }}
            </a>

        {% else %}

            <div class="form-group form-floating">

                <input type="email" class="form-control" id="recover-password-email" name="email" placeholder="{{ 'password_recover.email_placeholder' | t }}" value="{{ form.submitted.email | escape }}" required>

                <label for="recover-password-email">
                    {{ 'account.information.email' | t }}
                </label>

            </div>

            {% render 'form-error', error: form.error %}

            <button type="submit" class="btn btn-section btn-block mb-4">
                {{ 'password_recover.cta' | t }}
            </button>

        {% endif %}

    {% endform %}

{%- endcapture -%}

<section class="section section-login">
    {% render 'section', sectionTitle: sectionTitle, sectionContent: sectionContent, sectionContentContainer: 'compact', sectionOverlay: true %}
</section>