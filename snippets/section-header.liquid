{% comment %}
	Renders a section header

	Accepts:
	- sectionTitle: {String}
	- sectionTitleTag: {String}
	- sectionSubtitle: {String}
	- sectionDescription: {String}
	- sectionBreadcrumbs: {Object} Breadcrumbs Liquid object
	- sectionHeaderAction: {String}
	- sectionHeaderTextAlign: {String} 'left', 'center', 'right'
	- sectionContentContainer: {String} 'none', 'fixed', 'fluid', 'compact', 'tiny'

	Usage:
	Render this snippet inside of element with a "section" class.

	{% render 'section-header', sectionTitle: title, sectionTitleTag: tag, sectionSubtitle: subtitle, sectionDescription: description, sectionBreadcrumbs: breadcrumbs, sectionContentContainer: 'fixed' %}
{% endcomment %}

{% assign sectionTitleTag = sectionTitleTag | default: 'span'  %}

{% capture content %}

    <div class="row">

		<div class="col">

			{% if sectionHeaderAction %}

				<div class="action-container">

					{{- sectionHeaderAction -}}

				</div>

			{% endif %}

			{% if sectionBreadcrumbs %}

				<div class="breadcrumbs-container">

					<nav>

						<ul class="breadcrumbs">

							{% for breadcrumb in sectionBreadcrumbs %}

								<li class="item">

						            {%- if forloop.last == true -%}

						            	<a href="{{ breadcrumb | link }}" class="item-link">
						            		{{ breadcrumb.name }}
						            	</a>

						            {%- else -%}

						                <a href="{{ breadcrumb | link }}" class="item-link">
						                	{{ breadcrumb.name }}
						                </a>

						                {%- render 'icon', icon: 'arrow-right-1-Nc3Zm6', class: 'item-seperator' -%}

						            {%- endif -%}

						        </li>

					        {% endfor %}

						</ul>

					</nav>

				</div>

			{% endif %}

			{% if sectionTitle %}

				<div class="title-container">

					<{{ sectionTitleTag }} class="title">
						{{- sectionTitle -}}
					</{{ sectionTitleTag }}>

				</div>

			{% endif %}

			{% if sectionSubtitle %}

				<div class="subtitle-container">

					<span class="subtitle">
						{{- sectionSubtitle -}}
					</span>

				</div>

			{% endif %}

			{% if sectionDescription %}

				<div class="description-container">

					<div class="description">
						{{- sectionDescription -}}
					</div>

				</div>

			{% endif %}

		</div>

	</div>

{% endcapture %}

<div class="section-header{% if sectionHeaderTextAlign %} text-{{ sectionHeaderTextAlign }}{% endif %}{% if sectionContentContainer == 'none' %} d-block{% endif %}">

	{%- if sectionContentContainer == 'fixed' -%}

        <div class="container">

            {{- content -}}

        </div>

    {%- elsif sectionContentContainer == 'fluid' -%}

        <div class="container-fluid">

            {{- content -}}

        </div>

    {%- elsif sectionContentContainer == 'compact' -%}

        <div class="container-compact">

            {{- content -}}

        </div>

    {%- elsif sectionContentContainer == 'tiny' -%}

        <div class="container-tiny">

            {{- content -}}

        </div>

    {%- elsif sectionContentContainer == 'none' -%}

        {{- content -}}

    {%- endif -%}

</div>