<div class="product-attribute-container form-group">

    {% if attribute.name %}<label>{{ attribute.name }}</label>{% endif %}

    {% for option in attribute.options %}

        {%- if settings.taxFreePrices -%}
            {% assign itemPrice = option.net_price %}
        {%- else -%}
            {% assign itemPrice = option.price %}
        {%- endif -%}

        <div class="form-group form-check">

            {% if itemPrice > 0 and showAttributePrice and showAttributeTotalPrice and option.in_stock == true %}

                {% assign checkboxArgument1 = true %}

            {% endif %}

            {% if itemPrice > 0 and showAttributePrice and showAttributeTotalPrice and product.ignore_storage == true %}

                {% assign checkboxArgument2 = true %}

            {% endif %}

            <input class="product-attribute form-check-input{% if checkboxArgument1 or checkboxArgument2 %} has-price{% endif %}"
               type="checkbox"
               data-attribute="{{ attribute.id }}"
               id="product-option-{{ option.id }}"
               name="{{ attribute.id }}[]"
               value="{{ option.id }}"
               {% if option.in_stock == false and product.ignore_storage == false %} disabled{% else %} data-is-usable{% endif %}>

            <label for="product-option-{{ option.id }}" class="form-check-label">

                {{ option.name }}

                {% if itemPrice > 0 and showAttributePrice and showAttributeTotalPrice == blank %}

                    (+{{ itemPrice | in_currency }})

                {% endif %}

            </label>

        </div>

    {% endfor %}

</div>

{% for option in attribute.options %}

    {% if option.subattribute %}

        {% render 'product-attributes/subattribute', option: option %}

    {% endif %}

{% endfor %}