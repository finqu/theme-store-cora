{% comment %}
    Renders a ItemList schema

    Accepts:
	- items: {Object} Array containing product or article Liquid objects (required)
	- paginate: {Object} Paginate Liquid object (required if items are paginated)

    Usage:
    Render this snippet on category and blog pages

    {% render 'schemas/item-list' %}
{% endcomment %}

<script type="application/ld+json">
{
	"@context": "http://schema.org",
	"@type": "ItemList",
	"ItemListElement":
	[
		{
			"@type": "ListItem",
			"position": 0,
			"url": "https://www.example.com/ankle-boots-ana.html"
		},
		{
			"@type": "ListItem",
			"position": 1,
			"url": "https://www.example.com/ankle-boots-clara.html"
		},
		{
			"@type": "ListItem",
			"position": 2,
			"url": "https://www.example.com/ankle-boots-maria.html"
		}
	]
}
</script>