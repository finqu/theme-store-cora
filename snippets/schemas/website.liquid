{% comment %}
    Renders a Website schema

    Usage:
    Render this snippet on every page

    {% render 'schemas/website' %}
{% endcomment %}

<script type="application/ld+json">
{
	"@context": "http://schema.org",
	"@type": "WebSite",
	{%- if store.name -%}
	"name": {{ store.name | json }},
	{%- endif -%}
	"url": "{{ routes.root_url | full_url }}",
	"potentialAction": {
		"@type": "SearchAction",
		"target": "{{ routes.search_url | full_url }}?q={q}",
		"query": "required",
		"query-input": "required name=q"
	}
}
</script>