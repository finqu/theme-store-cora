{% comment %}
    Renders a Website schema

    Usage:
    Render this snippet on every page

    {% render 'schemas/website' %}
{% endcomment %}

<script type="application/ld+json">
{
	"@context": "http://schema.org",
	"@type": "WebSite",
	"url":"{{ request.protocol }}{{ request.host }}",
	"potentialAction": {
		"@type": "SearchAction",
		"target": "{{ request.protocol }}{{ request.host }}{{ routes.search_url }}?q={q}",
		"query": "required",
		"query-input": "required name=q"
	}
}
</script>