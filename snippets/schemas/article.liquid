{% comment %}
    Renders a Article schema

    Accepts:
	- article: {Object} Artticle Liquid object (required)

    Usage:
    Render this snippet on article page

    {% render 'schemas/article' %}
{% endcomment %}

<script type="application/ld+json">
{
	"@context": "http://schema.org",
	"@type": "Article",
	"headline": "{{ article.title }}",
	"image": "{{ article.header_image | asset_url }}",
	"datePublished": "{{ article.published_at | date: '%Y-%m-%d' }}",
	"dateModified": "{{ article.updated_at | date: '%Y-%m-%d' }}",
	"description": "{{ article.summary | default: article.content | strip_html | truncate: 140 | default: '' }}"
}
</script>