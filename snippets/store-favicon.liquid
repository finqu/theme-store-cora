{% comment %}
	Renders favicon dependencies

	Usage:
	Render this snippet inside of head element.

	{% render 'store-favicon' %}
{% endcomment %}

{%- if store.favicon -%}

	{%- assign isFaviconImgIco = store.favicon | is_ico -%}

	{%- if isFaviconImgIco -%}

		<link rel="shortcut icon" href="{{ faviconImgSrc }}" sizes="16x16 32x32 57x57 72x72 114x114 120x120 144x144 152x152" type="image/x-icon">

	{%- elsif faviconImgSrc -%}

		<link rel="icon" type="image/png" href="{{ faviconImgSrc }}">
		<link rel="apple-touch-icon-precomposed" href="{{ faviconImgSrc }}">

	{%- endif -%}

{%- endif -%}