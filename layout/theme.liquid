<!DOCTYPE html>

<html lang="{{ request.locale.iso_code }}">

	<head>

		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<meta name="format-detection" content="telephone=no">
		<meta name="theme-color" content="{{ settings.color_button }}">

		<link rel="preconnect" href="https://cdn.finqu.com" crossorigin>
		<link rel="preconnect" href="https://analytics.finqu.com" crossorigin>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

		<link rel="preload" href="{{ 'main.css' | asset_url }}" as="style">
		<link rel="preload" href="{{ 'main.js' | asset_url }}" as="script">

		{%- render 'store-fonts' -%}

		<link rel="stylesheet" href="{{ 'main.css' | asset_url }}" type="text/css" media="all">

		{%- capture seo_title -%}
			{{- page_title -}}
			{%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
			{%- assign escaped_page_title = page_title | escape -%}
			{%- unless escaped_page_title contains store.name %} &ndash; {{ store.name }}{% endunless -%}
		{%- endcapture -%}

		<title>{{ seo_title }}</title>

		{%- render 'store-favicon' -%}
		{%- render 'store-settings' -%}
		{%- render 'hbs-templates' -%}

		<script src="{{ 'main.js' | asset_url }}" defer="defer"></script>

		{%- if canonical_url != blank -%}
    		<link rel="canonical" href="{{ canonical_url }}">
  		{%- endif -%}

		{{ content_for_header }}

	</head>

	<body class="{% if request.design_mode %}design-mode {% endif %}{% if store.customer_accounts_enabled %}customer-accounts-enabled {% endif %}{% if customer %}customer-logged-in {% endif %}template-{{ request.page_type | handle }} layout-theme">

		{% section 'header' %}

		{{ content_for_layout }}

		{% section 'footer' %}

	</body>

</html>