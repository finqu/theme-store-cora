{%- assign defaultTitle = 'system.placeholder_text' | t -%}
{%- assign title = block.settings.title | default: defaultTitle -%}

{%- render 'section-header', sectionTitle: title, sectionTitleTag: block.settings.titleTag, sectionHeaderTextAlign: block.settings.textAlign, sectionSubtitle: block.settings.subtitle, sectionSubtitleTag: block.settings.subtitleTag, sectionContentContainer: 'none' -%}

{% schema %}
{
    "name": {
        "en": "Heading",
        "fi": "Otsikko"
    },
    "tag": "div",
    "class": "block block-heading",
    "category": "basic",
    "settings": [
        {
            "id": "title",
            "type": "text",
            "label": {
                "en": "Title",
                "fi": "Otsikko"
            }
        },
        {
            "id": "titleTag",
            "type": "radio-pill",
            "label": {
                "en": "Heading SEO priority",
                "fi": "Otsikon SEO-prioriteetti"
            },
            "default": "h2",
            "options": [
                {
                    "value": "h1",
                    "label": "H1"
                },
                {
                    "value": "h2",
                    "label": "H2"
                },
                {
                    "value": "h3",
                    "label": "H3"
                },
                {
                    "value": "span",
                    "label": {
                        "en": "Text",
                        "fi": "Teksti"
                    }
                }
            ],
            "conditions": ["title:length gt 0"]
        },
        {
            "id": "subtitle",
            "type": "text",
            "label": {
                "en": "Subtitle",
                "fi": "VÃ¤liotsikko"
            }
        },
        {
            "id": "subtitleTag",
            "type": "radio-pill",
            "label": {
                "en": "Subtitle SEO priority",
                "fi": "Alaotsikon SEO-prioriteetti"
            },
            "default": "h3",
            "options": [
                {
                    "value": "h3",
                    "label": "H3"
                },
                {
                    "value": "span",
                    "label": {
                        "en": "Text",
                        "fi": "Teksti"
                    }
                }
            ],
            "conditions": ["subtitle:length gt 0"]
        },
        {
            "id": "textAlign",
            "type": "radio-pill",
            "label": {
                "en": "Text align",
                "fi": "Tekstin tasaus"
            },
            "default": "center",
            "options": [
                {
                    "value": "left",
                    "label": "{# icon.alignLeftLight #}"
                },
                {
                    "value": "center",
                    "label": "{# icon.alignCenterLight #}"
                },
                {
                    "value": "right",
                    "label": "{# icon.alignRightLight #}"
                }
            ]
        }
    ]
}
{% endschema %}