{%- if settings.klarnaPlacementsClientId -%}

    <div class="d-flex justify-content-center p-4" style="background-color: #feb3c7;">

        {% render 'klarna-placement', type: 'homepage-promotion-wide' theme: 'light' %}

    </div>

{%- elsif request.design_mode -%}

    <div class="text-center p-4">

        <img src="{{ 'assets/klarna.svg' | asset_url }}">
        <p class="mt-4">{{ 'klarna.enable_klarna_from_settings' | t }}</p>

    </div>

{%- endif %}

{% schema %}
{
    "name": {
        "en": "Klarna light",
        "fi": "Klarna vaalea"
    },
    "class": "section",
    "category": "theme-klarna"
}
{% endschema %}