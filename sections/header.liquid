                        "default": "main"
                    },
                    {
                        "id": "logoImgSrc",
                        "type": "image-picker",
                        "label": {
                            "en": "Logo",
                            "fi": "Logo"
                        }
                    },
                    {
                        "type": "spacer"
                    },
                    {
                        "type": "title",
                        "label": {
                            "en": "Mobile navigation",
                            "fi": "Mobiilinavigointi"
                        }
                    },
                    {
                        "id": "addProductCategoriesToMobileNavigation",
                        "type": "checkbox",
                        "label": {
                            "en": "Add categories to navigation",
                            "fi": "Lisää tuoteryhmät navigaatioon"
