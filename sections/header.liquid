    {%- assign sectionClasses = 'site-header-layout-3' -%}

    {%- if section.settings.announcementStatus and section.settings.announcementText -%}
        {%- assign sectionClasses = sectionClasses | append: ' has-announcement' -%}
    {%- endif -%}

    {%- render 'headers/layout-3', section: section, sectionContent: sectionContent, sectionClasses: sectionClasses, search: search -%}

