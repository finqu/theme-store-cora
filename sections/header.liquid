                                    "en": "Layout 1",
                                    "fi": "Asettelu 1"
                                }
                            },
                            {
                                "value": "2",
                                "label": {
                                    "en": "Layout 2",
                                    "fi": "Asettelu 2"
                                }
                            },
                            {
                                "value": "3",
                                "label": {
                                    "en": "Layout 3",
                                    "fi": "Asettelu 3"
                                }
                            },
                            {
                                "value": "4",
                                "label": {
                                    "en": "Layout 4",
                                    "fi": "Asettelu 4"
                                }
                            },
                            {
                                "value": "5",
                                "label": {
                                    "en": "Layout 5",
                                    "fi": "Asettelu 5"
                                }
                            },
                            {
                                "value": "6",
                                "label": {
                                    "en": "Layout 6",
                                    "fi": "Asettelu 6"
                                }
                            },
                            {
