                        "default": true
                    },
                    {
                        "id": "headerSubmenuIndicator",
                        "type": "checkbox",
                        "label": {
                            "en": "Submenu indicator",
                            "fi": "Alavalikon osoitin"
                        },
                        "default": false
                    },
                    {
                        "id": "menu",
                        "type": "menu",
                        "label": {
                            "en": "Menu",
                            "fi": "Navigaatio"
