    {%- assign sectionClasses = 'site-header-layout-2' -%}

    {%- if section.settings.announcementStatus and section.settings.announcementText -%}
        {%- assign sectionClasses = sectionClasses | append: ' has-announcement' -%}
    {%- endif -%}

    {%- render 'headers/layout-2', section: section, sectionContent: sectionContent, sectionClasses: sectionClasses -%}

