{%- assign mainMenu = linklists[section.settings.menu] -%}

{%- if section.settings.announcementStatus and section.settings.announcementText -%}
    <style>
        #finqu-section-{{ section.id }} .site-announcement {
            background-color: {{ section.settings.announcementBgColor }};
        }

        #finqu-section-{{ section.id }} .site-announcement .site-announcement-text {
            color: {{ section.settings.announcementTextColor }};
        }
    </style>
{%- endif -%}

{%- unless customer -%}
    <style>
        #finqu-section-{{ section.id }} .site-mobile-header-logo,
        #finqu-section-{{ section.id }} .site-mobile-header-logo-text {
            margin-right: 48px;
        }
    </style>
{%- endunless -%}

{%- capture sectionContent -%}

    {%- if section.settings.announcementKlarna and settings.klarnaPlacementsClientId -%}

        {%- assign theme = section.settings.announcementKlarnaDark | yepnope: 'dark', 'light' -%}

        <div class="site-klarna-banner klarna-theme-{{ theme }}">

            {% render 'klarna-placement', type: section.settings.announcementKlarnaType theme: theme %}

        </div>

    {%- endif -%}

    {% if section.settings.announcementStatus and section.settings.announcementText %}

        <div class="site-announcement-container">

            <div class="site-announcement">

                {% if section.settings.announcementLink.url %}

                    <a href="{{- section.settings.announcementLink.url -}}" class="site-announcement-text"{% if section.settings.announcementLinkOpenInNewWindowStatus %} target="_blank"{% endif %}>

                        {{ section.settings.announcementText }}

                    </a>

                {% else %}

                    <span class="site-announcement-text">

                        {{ section.settings.announcementText }}

                    </span>

                {% endif %}

            </div>

        </div>

    {% endif %}

    <div class="site-search-container site-search-floating">

        <div class="site-search">

            <div class="site-search-form-container">

                {% form 'search', class: 'site-search-form' %}

                    <div class="site-search-form-icon">

                        {%- render 'icon', icon: 'regular/search', class: 'svg-icon-fw' -%}

                    </div>

                    <div class="site-search-form-input">

                        <input class="form-control mr-2" type="search" placeholder="{{ 'general.search_products' | t }}" name="q" value="{{ search.search_term }}" autocomplete="off">

                    </div>

                {% endform %}

            </div>

            <div class="site-search-results-container">

                <div class="site-search-results"></div>

            </div>

        </div>

    </div>

    <div class="site-mobile-header-container{% if section.settings.stickyHeader %} site-mobile-header-sticky{% endif %}">

        <div class="site-mobile-header">

            <div class="container d-flex">

                <div class="d-inline-flex align-items-center">

                    <div class="site-mobile-header-item-container">

                        <div class="site-mobile-header-item">

                            <button type="button" class="site-mobile-navigation-toggle btn btn-text">

                                {%- render 'icon', icon: 'regular/navigation-menu', class: 'svg-icon-fw' -%}

                            </button>

                        </div>

                    </div>

                    <div class="site-mobile-header-item-container">

                        <div class="site-mobile-header-item site-mobile-header-item-search">

                            <button type="button" class="site-search-toggle btn btn-text" class="btn btn-text">

                                {%- render 'icon', icon: 'regular/search', class: 'svg-icon-fw' -%}

                            </button>

                        </div>

                    </div>

                </div>

                <div class="d-inline-flex align-items-center justify-content-center flex-grow-1 site-mobile-header-logo-container">

                    <a href="/">

                        {%- assign imgSrc = section.settings.logoImgSrc -%}
                        {%- assign imgSize = '150,50' -%}

                        {% if imgSrc %}

                            <picture>
                                <img
                                    alt="{{ store.name }}"
                                    data-src="{{ imgSrc | thumb: imgSize }}"
                                    data-srcset="{{ imgSrc | thumb: imgSize }} 1x, {{ imgSrc | thumb: imgSize | thumb:'@2x' }} 2x"
                                    class="lazy d-block mx-auto img-fluid site-mobile-header-logo">
                            </picture>

                        {% else %}

                            <span class="site-mobile-header-logo-text">
                                {{ store.name }}
                            </span>

                        {% endif %}

                    </a>

                </div>

                <div class="d-inline-flex align-items-center position-relative">

                    {% if customer %}

                        <div class="site-mobile-header-item-container">

                            <div class="site-mobile-header-item site-mobile-header-item-wishlist">

                                <a href="{{ routes.account_wishlist_url }}" class="btn btn-text">

                                    <span class="site-mobile-header-item-counter{% if wishlist.products.size > 0 %} has-items{% endif %}">

                                        <span class="site-mobile-header-item-counter-text" data-wislist-item-count>
                                            {{ wishlist.products.size }}
                                        </span>

                                    </span>

                                    {%- render 'icon', icon: 'regular/love-it', class: 'svg-icon-fw' -%}

                                </a>

                            </div>

                        </div>

                    {% endif %}

                    <div class="site-mobile-header-item-container">

                        <div class="site-mobile-header-item">

                            <a href="{{ routes.cart_url }}" class="btn btn-text">

                                <span class="site-mobile-header-item-counter{% if cart.items.size > 0 %} has-items{% endif %}">

                                    <span class="site-mobile-header-item-counter-text" data-cart-item-count>
                                        {{ cart.item_count }}
                                    </span>

                                </span>

                                {%- render 'icon', icon: 'regular/shopping-bag-tag-1', class: 'svg-icon-fw' -%}

                            </a>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <nav class="site-mobile-navigation-container">

        {%- assign layerIndex = 0 -%}

        {% if section.settings.addProductCategoriesToMobileNavigation %}

            {% for category in categories.root %}

                {% if category.is_visible and category.sub_categories.size > 0 %}

                    {%- assign layerIndex = layerIndex | plus: 1 -%}

                    <div class="site-mobile-navigation-layer site-mobile-navigation-layer-child" data-mobile-navigation-layer-id="{{ layerIndex }}">

                        <div class="site-mobile-navigation-header">

                            <div class="site-mobile-navigation-header-inner">

                                <button type="button" name="site-mobile-navigation-hide-layer" class="btn btn-text" value="{{ layerIndex }}">
                                    {%- render 'icon', icon: 'regular/arrow-left', class: 'svg-icon-fw' -%}
                                </button>

                                <span class="site-mobile-navigation-header-text">
                                    {{ category.name }}
                                </span>

                            </div>

                        </div>

                        <ul class="site-mobile-navigation-menu">

                            {% for category in category.sub_categories %}

                                {% if category.is_visible %}

                                    <li class="site-mobile-navigation-menu-item{% if category.sub_categories.size > 0 %} site-mobile-navigation-menu-item-parent{% endif %}{% if category.current %} site-mobile-navigation-menu-item-active{% endif %}">

                                        <a href="{{ category | page_url }}" class="site-mobile-navigation-menu-item-text">
                                            {{ category.name }}
                                        </a>

                                        {% if category.sub_categories.size > 0 %}

                                            <button type="button" name="site-mobile-navigation-show-layer" class="btn btn-text" value="{{ layerIndex }}-{{ forloop.index }}">
                                                {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
                                            </button>

                                        {% endif %}

                                    </li>

                                {% endif %}

                            {% endfor %}

                        </ul>

                    </div>

                    {% for category in category.sub_categories %}

                        {% if category.is_visible and category.sub_categories.size > 0 %}

                            <div class="site-mobile-navigation-layer site-mobile-navigation-layer-child" data-mobile-navigation-layer-id="{{ layerIndex }}-{{ forloop.index }}">

                                <div class="site-mobile-navigation-header">

                                    <div class="site-mobile-navigation-header-inner">

                                        <button type="button" name="site-mobile-navigation-hide-layer" class="btn btn-text" value="{{ layerIndex }}-{{ forloop.index }}">
                                            {%- render 'icon', icon: 'regular/arrow-left', class: 'svg-icon-fw' -%}
                                        </button>

                                        <span class="site-mobile-navigation-header-text">
                                            {{ category.name }}
                                        </span>

                                    </div>

                                </div>

                                <ul class="site-mobile-navigation-menu">

                                    {% for category in category.sub_categories %}

                                        {% if category.is_visible %}

                                            <li class="site-mobile-navigation-menu-item{% if category.sub_categories.size > 0 %} site-mobile-navigation-menu-item-parent{% endif %}{% if item.current %} site-mobile-navigation-menu-item-active{% endif %}">

                                                <a href="{{ category | page_url }}" class="site-mobile-navigation-menu-item-text">
                                                    {{ category.name }}
                                                </a>

                                            </li>

                                        {% endif %}

                                    {% endfor %}

                                </ul>

                            </div>

                        {% endif %}

                    {% endfor %}

                {% endif %}

            {% endfor %}

        {% endif %}

        {% for item in mainMenu.links %}

            {% if item.links %}

                {%- assign layerIndex = layerIndex | plus: 1 -%}

                <div class="site-mobile-navigation-layer site-mobile-navigation-layer-child" data-mobile-navigation-layer-id="{{ layerIndex }}">

                    <div class="site-mobile-navigation-header">

                        <div class="site-mobile-navigation-header-inner">

                            <button type="button" name="site-mobile-navigation-hide-layer" class="btn btn-text" value="{{ layerIndex }}">
                                {%- render 'icon', icon: 'regular/arrow-left', class: 'svg-icon-fw' -%}
                            </button>

                            <span class="site-mobile-navigation-header-text">
                                {{ item.title }}
                            </span>

                        </div>

                    </div>

                    <ul class="site-mobile-navigation-menu">

                        {% for item in item.links %}

                            <li class="site-mobile-navigation-menu-item{% if item.links %} site-mobile-navigation-menu-item-parent{% endif %}{% if item.active %} site-mobile-navigation-menu-item-active{% endif %}">

                                {%- if item.url -%}

                                    <a href="{{ item.url }}" class="site-mobile-navigation-menu-item-text">
                                        {{ item.title }}
                                    </a>

                                    {%- if item.links -%}

                                        <button type="button" name="site-mobile-navigation-show-layer" class="btn btn-text" value="{{ layerIndex }}-{{ forloop.index }}">
                                            {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
                                        </button>

                                    {% endif %}

                                {%- else -%}

                                    <span class="site-mobile-navigation-menu-item-text">
                                        {{ item.title }}
                                    </span>

                                    {%- if item.links -%}

                                        <button type="button" name="site-mobile-navigation-show-layer" class="btn btn-text" value="{{ layerIndex }}-{{ forloop.index }}">
                                            {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
                                        </button>

                                    {% endif %}

                                {%- endif -%}

                            </li>

                        {% endfor %}

                    </ul>

                </div>

                {% for item in item.links %}

                    {% if item.links %}

                        <div class="site-mobile-navigation-layer site-mobile-navigation-layer-child" data-mobile-navigation-layer-id="{{ layerIndex }}-{{ forloop.index }}">

                            <div class="site-mobile-navigation-header">

                                <div class="site-mobile-navigation-header-inner">

                                    <button type="button" name="site-mobile-navigation-hide-layer" class="btn btn-text" value="{{ layerIndex }}-{{ forloop.index }}">
                                        {%- render 'icon', icon: 'regular/arrow-left', class: 'svg-icon-fw' -%}
                                    </button>

                                    <span class="site-mobile-navigation-header-text">
                                        {{ item.title }}
                                    </span>

                                </div>

                            </div>

                            <ul class="site-mobile-navigation-menu">

                                {% for item in item.links %}

                                    <li class="site-mobile-navigation-menu-item{% if item.links %} site-mobile-navigation-menu-item-parent{% endif %}{% if item.active %} site-mobile-navigation-menu-item-active{% endif %}">

                                        {%- if item.url -%}

                                            <a href="{{ item.url }}" class="site-mobile-navigation-menu-item-text">
                                                {{ item.title }}
                                            </a>

                                        {%- else -%}

                                            <span class="site-mobile-navigation-menu-item-text">
                                                {{ item.title }}
                                            </span>

                                        {%- endif -%}

                                    </li>

                                {% endfor %}

                            </ul>

                        </div>

                    {% endif %}

                {% endfor %}

            {% endif %}

        {% endfor %}

        <div class="site-mobile-navigation-layer site-mobile-navigation-layer-root">

            {% if store.customer_accounts_enabled %}

                <div class="site-mobile-navigation-account">

                    {% if session.logged_in %}

                        <a href="{{ routes.account_url }}">

                            <div class="site-mobile-navigation-account-inner">

                                <span class="site-mobile-navigation-account-text">
                                    {{ 'account.title' | t }}
                                </span>

                                {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}

                            </div>

                        </a>

                    {% else %}

                        <a href="{{ routes.account_login_url }}">

                            <div class="site-mobile-navigation-account-inner">

                                <span class="site-mobile-navigation-account-text">
                                    {{ 'login.title' | t }}
                                </span>

                                {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}

                            </div>

                        </a>

                    {% endif %}

                </div>

            {% endif %}

            <ul class="site-mobile-navigation-menu">

                {%- assign layerIndex = 0 -%}

                {% if section.settings.addProductCategoriesToMobileNavigation %}

                    {% for category in categories.root %}

                        {% if category.is_visible %}

                            <li class="site-mobile-navigation-menu-item{% if item.current %} site-mobile-navigation-menu-item-active{% endif %}">

                                <a href="{{ category | page_url }}" class="site-mobile-navigation-menu-item-text">
                                    {{ category.name }}
                                </a>

                                {% if category.sub_categories.size > 0 %}

                                    {%- assign layerIndex = layerIndex | plus: 1 -%}

                                    <button type="button" name="site-mobile-navigation-show-layer" class="btn btn-text" value="{{ layerIndex }}">
                                        {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
                                    </button>

                                {% endif %}

                            </li>

                        {% endif %}

                    {% endfor %}

                {% endif %}

                {% for item in mainMenu.links %}

                    <li class="site-mobile-navigation-menu-item{% if item.active %} site-mobile-navigation-menu-item-active{% endif %}">

                        {%- if item.url -%}

                            <a href="{{ item.url }}" class="site-mobile-navigation-menu-item-text">
                                {{ item.title }}
                            </a>

                            {%- if item.links -%}

                                {%- assign layerIndex = layerIndex | plus: 1 -%}

                                <button type="button" name="site-mobile-navigation-show-layer" class="btn btn-text" value="{{ layerIndex }}">
                                    {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
                                </button>

                            {% endif %}

                        {%- else -%}

                            <span class="site-mobile-navigation-menu-item-text">
                                {{ item.title }}
                            </span>

                            {%- if item.links -%}

                                {%- assign layerIndex = layerIndex | plus: 1 -%}

                                <button type="button" name="site-mobile-navigation-show-layer" class="btn btn-text" value="{{ layerIndex }}">
                                    {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
                                </button>

                            {% endif %}

                        {%- endif -%}

                    </li>

                {% endfor %}

            </ul>

            {% if section.settings.socialMediaIconsStatus %}

                {% render 'social-media-buttons' class: 'site-mobile-navigation-social-media-buttons-container' %}

            {% endif %}

        </div>

    </nav>

    <div class="site-mobile-navigation-overlay"></div>

{%- endcapture -%}

{%- if section.settings.headerLayout == '1' -%}

    {%- assign sectionClasses = 'site-header-layout-1' -%}

    {%- if section.settings.announcementStatus and section.settings.announcementText -%}
        {%- assign sectionClasses = sectionClasses | append: ' has-announcement' -%}
    {%- endif -%}

    {%- render 'headers/layout-1', section: section, sectionContent: sectionContent, sectionClasses: sectionClasses -%}

