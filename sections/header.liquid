    {%- assign sectionClasses = 'site-header-layout-4' -%}

    {%- if section.settings.announcementStatus and section.settings.announcementText -%}
        {%- assign sectionClasses = sectionClasses | append: ' has-announcement' -%}
    {%- endif -%}

    {%- render 'headers/layout-4', section: section, sectionContent: sectionContent, sectionClasses: sectionClasses -%}

{%- elsif section.settings.headerLayout == '5' -%}

    {%- assign sectionClasses = 'site-header-layout-5' -%}

    {%- if section.settings.announcementStatus and section.settings.announcementText -%}
        {%- assign sectionClasses = sectionClasses | append: ' has-announcement' -%}
    {%- endif -%}

    {%- render 'headers/layout-5', section: section, sectionContent: sectionContent, sectionClasses: sectionClasses -%}

{%- elsif section.settings.headerLayout == '6' -%}

    {%- assign sectionClasses = 'site-header-layout-6' -%}

    {%- if section.settings.announcementStatus and section.settings.announcementText -%}
        {%- assign sectionClasses = sectionClasses | append: ' has-announcement' -%}
    {%- endif -%}

    {%- render 'headers/layout-6', section: section, sectionContent: sectionContent, sectionClasses: sectionClasses -%}

{%- elsif section.settings.headerLayout == '7' -%}

    {%- assign sectionClasses = 'site-header-layout-7' -%}

    {%- if section.settings.announcementStatus and section.settings.announcementText -%}
        {%- assign sectionClasses = sectionClasses | append: ' has-announcement' -%}
    {%- endif -%}

    {%- render 'headers/layout-7', section: section, sectionContent: sectionContent, sectionClasses: sectionClasses -%}

{% endif %}

