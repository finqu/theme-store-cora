<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">{{ section.settings.sectionTitle | _default:store.name }}</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Pages
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
          	{% for page_item in store.pages.root %}
          		<li><a class="dropdown-item" href="{{ page_item | link }}">{{ page_item.name }}</a></li>
          	{% endfor %}
          </ul>
        </li>

        {% if store.session.logged_in %}

          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ routes.account_url }}">Account</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ routes.account_logout_url }}">Sign out</a>
          </li>

        {% elsif store.customer_accounts_enabled %}

          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ routes.account_login_url }}">Sign in</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ routes.account_register_url }}">Sign up</a>
          </li>

        {% endif %}

      </ul>

      {% form 'search' id:header-search class:d-flex %}
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="q">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
      {% endform %}
    </div>
  </div>
</nav>

{% schema %}
{
    "name": "Header",
    "tag": "div",
    "is_creatable": false,
    "settings": [
        {
            "id": "title",
            "type": "product",
            "label": "prod"
        }
    ]
}
{% endschema %}
