                                    "step": 1,
                                    "default": 3,
                                    "unit": "s",
                                    "conditions": ["autoplay:truthy eq true"]
                                },
                                {
                                    "id": "navigation",
                                    "type": "radio-pill",
                                    "label": "Show navigation",
                                    "default": "hover",
                                    "options": [
                                        {
                                            "value": "",
                                            "label": "Off"
                                        },
                                        {
                                            "value": "hover",
                                            "label": "On Hover"
                                        },
                                        {
                                            "value": "on",
                                            "label": "Always"
                                        }
                                    ]
                                },
                                {
                                    "id": "pagination",
                                    "type": "radio-pill",
                                    "label": "Show pagination",
                                    "default": "hover",
                                    "options": [
                                        {
                                            "value": "",
                                            "label": "Off"
                                        },
                                        {
                                            "value": "hover",
                                            "label": "On Hover"
                                        },
                                        {
                                            "value": "on",
                                            "label": "Always"
                                        }
                                    ]
                                },
                                {
                                    "id": "effect",
                                    "type": "radio-pill",
                                    "label": "Effect",
                                    "default": "slide",
                                    "options": [
                                        {
                                            "value": "slide",
                                            "label": "Slide"
                                        },
                                        {
                                            "value": "fade",
                                            "label": "Fade"
                                        }
                                    ]
                                },
                                {
                                    "id": "sectionHeight",
                                    "type": "radio-pill",
                                    "label": "Section height",
                                    "default": "",
                                    "options": [
                                        {
                                            "value": "",
                                            "label": "Auto"
                                        },
                                        {
                                            "value": "sm",
                                            "label": "S"
                                        },
                                        {
                                            "value": "md",
                                            "label": "M"
                                        },
                                        {
                                            "value": "lg",
                                            "label": "L"
                                        },
                                        {
                                            "value": "xl",
                                            "label": "XL"
                                        }
                                    ]
                                },
                                {
                                    "id": "slideImgOverlay",
                                    "label": "Overlay",
                                    "type": "range",
                                    "min": 0,
                                    "max": 90,
                                    "step": 10,
                                    "default": 0,
                                    "unit": "%"
                                }
                            ]
                        },
                        {
                            "title": "Colors",
                            "settings": [
                                {
                                    "id": "sectionStyle",
                                    "styles_id": "sectionStyles",
                                    "type": "style-picker",
                                    "default": "light"
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    }
}
{% endschema %}