{%- capture carouselSettings -%} data-carousel-autoplay="{{- section.settings.autoplay | boolval -}}"{%- endcapture -%}

{%- if section.settings.autoplay -%}
    {% capture autoplaySpeedAttr %} data-carousel-autoplay-speed="{{- section.settings.autoplaySpeed -}}"{% endcapture %}
    {%- assign carouselSettings = carouselSettings | append: autoplaySpeedAttr -%}
{%- endif -%}

{% capture paginationAttr %} data-carousel-pagination="{{- section.settings.pagination | boolval -}}"{% endcapture %}
{%- assign carouselSettings = carouselSettings | append: paginationAttr -%}

{% capture loopAttr %} data-carousel-loop="{{ section.settings.loop | boolval }}"{% endcapture %}
{%- assign carouselSettings = carouselSettings | append: loopAttr -%}

{% capture effectAttr %} data-carousel-effect="{{- section.settings.effect -}}"{% endcapture %}
{%- assign carouselSettings = carouselSettings | append: effectAttr -%}

{%- assign carouselClasses = '' -%}

{%- if section.settings.pagination == 'hover' -%}
    {% capture paginationHoverClass %} swiper-pagination-hover{% endcapture %}
    {%- assign carouselClasses = carouselClasses | append: paginationHoverClass -%}
{%- endif -%}

{%- if section.settings.navigation == 'hover' -%}
    {% capture navigationHoverClass %} swiper-navigation-hover{% endcapture %}
    {%- assign carouselClasses = carouselClasses | append: navigationHoverClass -%}
{%- endif -%}

{%- if section.settings.slideImgOverlay -%}
    <style>
        #finqu-section-{{ section.id }} .swiper-slide::after {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            right: 0;
            bottom: 0;
            z-index: 1;
            background: linear-gradient(0deg, rgb(0,0,0, {{ section.settings.slideImgOverlay }}%), rgb(0,0,0, {{ section.settings.slideImgOverlay }}%))
        }
    </style>
{%- endif -%}

{%- capture content -%}

    {% for item in section.settings.setting_blocks.items %}

        <div class="swiper-slide">

            {% if item.settings.imgSrc %}

                <div class="slide-bg-img">

                    {%- assign imgSizeSm = '768,400' -%}

                    {%- case sectionHeight -%}
                        {%- when 'sm' -%}
                            {%- assign imgSizeMd = '768,400' -%}
                            {%- assign imgSizeLg = '1100,400' -%}
                            {%- assign imgSizeXl = '1905,400' -%}
                        {%- when 'md' -%}
                            {%- assign imgSizeMd = '768,600' -%}
                            {%- assign imgSizeLg = '1100,600' -%}
                            {%- assign imgSizeXl = '1905,600' -%}
                        {%- when 'lg' -%}
                            {%- assign imgSizeMd = '768,800' -%}
                            {%- assign imgSizeLg = '1100,800' -%}
                            {%- assign imgSizeXl = '1905,800' -%}
                        {%- when 'xl' -%}
                            {%- assign imgSizeMd = '768,945' -%}
                            {%- assign imgSizeLg = '1100,945' -%}
                            {%- assign imgSizeXl = '1905,945' -%}
                    {%- endcase -%}

                    <picture>

                        <source media="(min-width: 768px)" data-srcset="
                            {{ item.settings.imgSrc | thumb: imgSizeMd }} 1x,
                            {{ item.settings.imgSrc | thumb: imgSizeMd | thumb:'@2x' }} 2x">

                        <source media="(min-width: 992px)" data-srcset="
                            {{ item.settings.imgSrc | thumb: imgSizeLg }} 1x,
                            {{ item.settings.imgSrc | thumb: imgSizeLg | thumb:'@2x' }} 2x">

                        <source media="(min-width: 1200px)" data-srcset="
                            {{ item.settings.imgSrc | thumb: imgSizeXl }} 1x,
                            {{ item.settings.imgSrc | thumb: imgSizeXl | thumb:'@2x' }} 2x">

                        <img
                            alt="{{ item.settings.imgAlt }}"
                            data-src="{{ item.settings.imgSizeSm | thumb: imgSizeMobile }}"
                            data-srcset="{{ item.settings.imgSrc | thumb: imgSizeSm }} 1x,{{ item.settings.imgSrc | thumb: imgSizeSm | thumb:'@2x' }} 2x"
                            class="slide-lazy-img">

                    </picture>

                </div>

            {% endif %}

            <div class="container h-100">

                <div class="row h-100">

                    <div class="col align-self-center justify-content-center flex-column">

                        {% if item.settings.title %}

                            <div class="slide-title">

                                <h3>
                                    {{ item.settings.title }}
                                </h3>

                            </div>

                        {% endif %}

                        {% if item.settings.description %}

                            <div class="slide-description">

                                <p>
                                    {{ item.settings.description }}
                                </p>

                            </div>

                        {% endif %}

                        {% if item.settings.btnLabel %}

                            <div class="slide-action">

                                <a href="{{- item.settings.btnResource.url -}}" class="btn btn-primary">
                                    {{ item.settings.btnLabel }}
                                </a>

                            </div>

                        {% endif %}

                    </div>

                </div>

            </div>

        </div>

    {% endfor %}

{%- endcapture -%}

{%- capture sectionContent -%}

    <div class="swiper-container{{ carouselClasses }}" {{ carouselSettings }}>

        <div class="swiper-wrapper">

            {{- content -}}

        </div>

        {%- if section.settings.navigation -%}

            <div class="swiper-button-prev">
                {%- render 'icon', icon: 'arrow-left-1-itskPx' -%}
            </div>

            <div class="swiper-button-next">
                {%- render 'icon', icon: 'arrow-right-1-Ei8Dl0' -%}
            </div>

        {%- endif -%}

        {%- if section.settings.pagination -%}

            <div class="swiper-pagination"></div>

        {%- endif -%}

    </div>

{%- endcapture -%}

{% render 'section', section: section, sectionContent: sectionContent, sectionContentContainer: 'none' %}

{% schema %}
{
    "name": "Image carousel",
    "tag": "section",
    "class": "section section-image-carousel",
    "settings": {
        "list_type": "tabs",
        "groups": [
