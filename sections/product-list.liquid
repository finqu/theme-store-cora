{%- capture sectionContent -%}

    {%- case section.settings.listType -%}
        {% when 'discounted' %}
            {%- assign items = products.discounted -%}
        {% when 'new' %}
            {%- assign items = products.new_products -%}
        {% when 'tag' %}
            {%- assign items = products.tags[section.settings.tagId] -%}
        {% when 'category' %}
            {%- assign items = categories[section.settings.category.id].products -%}
        {% when 'manufacturer' %}
            {%- assign items = manufacturers[section.settings.manufacturer.id].products -%}
    {%- endcase -%}

    {%- assign items = items | slice: 0, section.settings.itemAmount -%}

    <div class="{{ section.settings.listType }} row row-cols-2 row-cols-sm-3 row-cols-md-3 row-cols-lg-{{ section.settings.itemsPerRow }}">

        {% if items.size > 0 %}

            {% for product in items %}

                <div class="col pt-3 pb-4">

                    {%- render 'product-card-grid', product: product, wishlist: 'toggle', itemsPerRow: section.settings.itemsPerRow, showBadges: section.settings.showBadges, showManufacturer: section.settings.showManufacturer, showProductName: section.settings.showProductName, showPricing: section.settings.showPricing -%}

                </div>

            {% endfor %}

        {% else if request.design_mode %}

            {% for num in (1..section.settings.itemAmount) %}

                <div class="col pt-3 pb-4">

                    {%- render 'product-card-grid', wishlist: 'toggle', itemsPerRow: section.settings.itemsPerRow, showBadges: section.settings.showBadges, showManufacturer: section.settings.showManufacturer, showProductName: section.settings.showProductName, showPricing: section.settings.showPricing -%}

                </div>

            {% endfor %}


        {% endif %}

    </div>

{%- endcapture -%}

{%- assign sectionTitle = section.settings.sectionTitle -%}
{%- assign sectionSubtitle = section.settings.sectionSubtitle -%}
{%- assign sectionHeaderTextAlign = section.settings.sectionHeaderTextAlign -%}

