                                                {% assign itemPrice = product.net_price %}
                                            {%- else -%}
                                                {% assign itemPrice = product.price %}
                                            {%- endif -%}

                                            <div class="mt-3">

                                                {% render 'klarna-placement', type: 'credit-promotion-auto-size', purchaseAmount: itemPrice %}

                                            </div>

                                        {% endif %}

                                        {%- if section.settings.showStockBalance and product.inventory_policy == 'deny' and product.only_preview == false -%}
                                            {%- assign showStockBalance = true -%}
                                        {%- endif -%}

                                        {% if showStockBalance %}

                                            <div class="product-stock-balance">

                                                {%- render 'icon', icon: 'regular/warehouse-storage-2', class: 'svg-icon-fw svg-icon-lg' -%}

                                                <span class="font-weight-bold ml-3">
                                                    {{ 'product.stock_balance_available' | t }} {{ product.stock | default: '0' }} {{ product.unit }}
                                                </span>

                                            </div>

                                        {% endif %}

                                        {% if product.deliverytime and product.deliverytime.max.days > 0 %}

                                            <div class="product-delivery-time">

                                                {%- render 'icon', icon: 'regular/delivery-truck-clock', class: 'svg-icon-fw svg-icon-lg' -%}

                                                <span class="font-weight-bold ml-3">
                                                    {{ 'product.delivery_time_dynamic' | t: min_days: product.deliverytime.min.days, max_days: product.deliverytime.max.days }}
                                                </span>

                                            </div>

                                        {% endif %}

                                        {% if product.returntime and product.returntime.days %}

                                            <div class="product-return-time">

                                                {%- render 'icon', icon: 'regular/keyboard-arrow-return', class: 'svg-icon-fw svg-icon-lg' -%}

                                                <span class="font-weight-bold ml-3">
                                                    {{ 'product.return_time_dynamic' | t: days: product.returntime.days }}
                                                </span>

                                            </div>

                                        {% endif %}

                                    {% endform %}

                                </div>

                            {% elsif product.inventory_policy == 'deny' and product.in_stock == false and product.only_preview == false %}

                                <div class="product-form">

                                    <div class="product-info-out-of-stock">

                                        <span class="product-info-out-of-stock-text btn btn-section btn-block disabled">
                                            {{ 'product.out_of_stock' | t }}
                                        </span>

                                    </div>

                                </div>

                            {% endif %}

                        {% endif %}

                    {% endif %}

                    <div class="product-details accordion">

                        {% if product.description %}

                            <div class="card">

                                <div class="card-header">

                                    <button class="btn btn-block btn-text d-flex" data-toggle="collapse" data-target="#accordion-product-description">

                                        <span>
                                            {{ 'product.description' | t }}
                                        </span>

                                        <span class="accordion-indicator">
                                            {%- render 'icon', icon: 'regular/arrow-down-1' -%}
                                        </span>

                                    </button>

                                </div>

                                <div id="accordion-product-description" class="collapse">

                                    <div class="product-description card-body">
                                        {{ product.description }}
                                    </div>

                                </div>

                            </div>

                        {% endif %}

                        {% if product.attachments.size %}

                            <div class="card">

                                <div class="card-header">

                                    <button class="btn btn-block btn-text d-flex" data-toggle="collapse" data-target="#accordion-product-attachments">

                                        <span>
                                            {{ 'product.attachments' | t }}
                                        </span>

                                        <span class="accordion-indicator">
                                            {%- render 'icon', icon: 'regular/arrow-down-1' -%}
                                        </span>

                                    </button>

                                </div>

                                <div id="accordion-product-attachments" class="collapse">

                                    <div class="product-attachments card-body">

                                        {% for attachment in product.attachments %}

                                            <a href="{{ attachment.href }}" class="product-attachment-item d-flex align-items-center">

                                                {%- render 'icon', icon: 'regular/download-bottom', class: 'svg-icon-2x' -%}

                                                <span class="ml-3">{{ attachment.name }}</span>
                                            </a>

                                        {% endfor %}

                                    </div>

                                </div>

                            </div>

                        {% endif %}

                        {% if product.reviews_are_enabled %}

                            <div class="card">

                                <div class="card-header">

                                    <button class="btn btn-block btn-text d-flex align-items-center" data-toggle="collapse" data-target="#accordion-product-reviews">

                                        <span class="mr-2">{{ 'product.reviews' | t }} ({{ product.review_count }})</span>

                                        <div class="product-review-icons">

                                            {% for rating in (1..product.max_rating) %}

                                                <div class="product-review-icon">

                                                    {% if product.rating >= rating %}

                                                        {%- render 'icon', icon: 'bold/rating-star' -%}

                                                    {% else %}

                                                        {%- render 'icon', icon: 'regular/rating-star' -%}

                                                    {% endif %}

                                                </div>

                                            {% endfor %}

                                        </div>

                                        <span class="accordion-indicator">
                                            {%- render 'icon', icon: 'regular/arrow-down-1' -%}
                                        </span>

                                    </button>

                                </div>

                                <div id="accordion-product-reviews" class="collapse{% if submitted_form.id == 'product-review-form'%} show{% endif %}">

                                    <div class="product-reviews card-body">

                                        {% if product.reviews_are_enabled %}

                                            <div class="mb-4">

                                                {% if product.customer_can_review %}

                                                    <button id="product-review-create" class="btn btn-outline-section{% if submitted_form.id == 'product-review-form' and submitted_form.error %} d-none{% endif %}">
                                                        {{ 'product.write_review' | t }}
                                                    </button>

                                                    <div class="product-review-form{% unless submitted_form.id == 'product-review-form' and submitted_form.error %} d-none{% endunless %}">

                                                        {% form 'review', product id: 'product-review-form' %}

                                                            <div class="form-group form-floating">

                                                                <input name="name" type="text" id="product-review-name" class="form-control" placeholder="{{ 'general.name' | t }}" value="{{ form.submitted.name | escape }}" required>

                                                                <label for="product-review-name">
                                                                    {{ 'general.name' | t }}
                                                                </label>

                                                            </div>

                                                            <div class="form-group form-floating">

                                                                <input name="title" type="text" id="product-review-title" class="form-control" placeholder="{{ 'general.title' | t }}" value="{{ form.submitted.title | escape }}" required>

                                                                <label for="product-review-title">
                                                                    {{ 'general.title' | t }}
                                                                </label>

                                                            </div>

                                                            <div class="form-group">

                                                                <textarea name="comment" class="form-control" rows="5" placeholder="{{ 'product.write_review' | t }}" value="{{ form.submitted.comment | escape }}" required></textarea>

                                                            </div>

                                                            <div class="form-group d-flex justify-content-between align-items-center">

                                                                <span class="h5 mb-0">
                                                                    {{ 'product.review_grade' | t }}
                                                                </span>

                                                                <fieldset class="product-review-rating ml-2">

                                                                    <input type="radio" id="product-review-rating-5" name="rating" value="5"{% if form.submitted.rating | escape == '5' %} checked{% endif %}>
                                                                    <label for="product-review-rating-5" title="5">
                                                                        {%- render 'icon', icon: 'bold/rating-star', class: 'svg-icon-fill' -%}
                                                                    </label>

                                                                    <input type="radio" id="product-review-rating-4" name="rating" value="4"{% if form.submitted.rating | escape == '4' %} checked{% endif %}>
                                                                    <label for="product-review-rating-4" title="4">
                                                                        {%- render 'icon', icon: 'bold/rating-star', class: 'svg-icon-fill' -%}
                                                                    </label>

                                                                    <input type="radio" id="product-review-rating-3" name="rating" value="3"{% if form.submitted.rating | escape == '3' %} checked{% endif %}>
                                                                    <label for="product-review-rating-3" title="3">
                                                                       {%- render 'icon', icon: 'bold/rating-star', class: 'svg-icon-fill' -%}
                                                                    </label>

                                                                    <input type="radio" id="product-review-rating-2" name="rating" value="2"{% if form.submitted.rating | escape == '2' %} checked{% endif %}>
                                                                    <label for="product-review-rating-2" title="2">
                                                                        {%- render 'icon', icon: 'bold/rating-star', class: 'svg-icon-fill' -%}
                                                                    </label>

                                                                    <input type="radio" id="product-review-rating-1" name="rating" value="1"{% if form.submitted.rating | escape == '1' %} checked{% endif %}>
                                                                    <label for="product-review-rating-1" title="1">
                                                                        {%- render 'icon', icon: 'bold/rating-star', class: 'svg-icon-fill' -%}
                                                                    </label>

                                                                </fieldset>

                                                            </div>

                                                            {% render 'form-error', error: form.error, class: 'form-group' %}

                                                            <div class="form-group text-right">

                                                                <button type="button" id="product-review-cancel" class="btn btn-outline-section">{{ 'general.cancel' | t }}</button>

                                                                <button type="submit" class="btn btn-section">{{ 'general.submit' | t }}</button>

                                                            </div>

                                                        {% endform %}

                                                    </div>

                                                {% elsif session.logged_in == false and product.reviews_require_account %}

                                                    <span>
                                                        {{ 'product.review_account_required' | t }}
                                                    </span>

                                                {% elsif product.customer_has_purchased == false and product.reviews_require_purchase %}

                                                    <span>
                                                        {{ 'product.review_purchase_required' | t }}
                                                    </span>

                                                {% elsif product.customer_has_reviewed %}

                                                    {% if product.reviews_require_approval %}

                                                        <span>
                                                            {{ 'product.review_publish_pending' | t }}
                                                        </span>

                                                    {% else %}

                                                        <span>
                                                            {{ 'product.review_already_given' | t }}
                                                        </span>

                                                    {% endif %}

                                                {% endif %}

                                            </div>

                                        {% endif %}

                                        {% for review in product.reviews %}

                                            <div class="product-review">

                                                <div class="product-review-title mb-0">

                                                    <span class="product-review-title">
                                                        {{ review.name }}
                                                    </span>

                                                </div>

                                                <div class="product-review-date">

                                                    {%- assign dateFormat = 'general.date_format' | t  -%}

                                                    <i><time datetime="{{ review.created_at | date: "%F" }}">{{ review.created_at  | date: dateFormat }}</time></i>

                                                </div>

                                                <div class="product-review-rating">

                                                    <div class="product-review-icons">

                                                        {% for rating in (1..product.max_rating) %}

                                                            <div class="product-review-icon">

                                                                {% if review.rating >= rating %}

                                                                    {%- render 'icon', icon: 'bold/rating-star' -%}

                                                                {% else %}

                                                                    {%- render 'icon', icon: 'regular/rating-star' -%}

                                                                {% endif %}

                                                            </div>

                                                        {% endfor %}

                                                    </div>

                                                </div>

                                                <div class="product-review-content">

                                                    <p class="mb-0"><strong>{{ review.title }}</strong></p>

                                                    {{ review.review }}

                                                </div>

                                            </div>

                                        {% endfor %}

                                    </div>

                                </div>

                            </div>

                        {% endif %}

                        {% if product.model or product.gtin %}

                            <div class="card">

                                <div class="card-header">

                                    <button class="btn btn-block btn-text d-flex" data-toggle="collapse" data-target="#accordion-product-additional-information">

                                        <span>
                                            {{ 'product.additional_information' | t }}
                                        </span>

                                        <span class="accordion-indicator">
                                            {%- render 'icon', icon: 'regular/arrow-down-1' -%}
                                        </span>

                                    </button>

                                </div>

                                <div id="accordion-product-additional-information" class="collapse">

                                    <div class="product-additional-information card-body">

                                        {% if product.model %}

                                            <div class="d-flex{% if product.gtin %} mb-2{% endif %}">

                                                <span class="font-weight-bold">
                                                    {{ 'product.model_number' | t }}:
                                                </span>

                                                <span class="ml-2">
                                                    {{ product.model }}
                                                </span>

                                            </div>

                                        {% endif %}

                                        {% if product.gtin %}

                                            <div class="product-additional-information-item d-flex">

                                                <span class="font-weight-bold">
                                                    {{ 'product.product_identifier' | t }}:
                                                </span>

                                                <span class="ml-2">
                                                    {{ product.gtin }}
                                                </span>

                                            </div>

                                        {% endif %}

                                    </div>

                                </div>

                            </div>

                        {% endif %}

                    </div>

                </div>

            </div>

        </div>

        {% if product.similar.size > 0 or request.design_mode %}

            {%- assign carouselTitle = 'product.similar_products' | t -%}

            <div class="mt-4">

                {% render 'section-header', sectionTitle: carouselTitle, sectionContentContainer: 'none' %}

                <div class="product-carousel mt-4">
                    {% render 'product-carousel', items: product.similar, navigation: 'hover', pagination: 'hover', productShowAddToCart: false %}
                </div>

            </div>

        {% endif %}

        {% if product.compatible.size > 0 or request.design_mode %}

            {%- assign carouselTitle = 'product.compatible_products' | t -%}

            <div class="mt-4">

                {% render 'section-header', sectionTitle: carouselTitle, sectionContentContainer: 'none' %}

                <div class="product-carousel mt-4">
                    {% render 'product-carousel', items: product.compatible, navigation: 'hover', pagination: 'hover', productShowAddToCart: false %}
                </div>

            </div>

        {% endif %}

    {% endif %}

{%- endcapture -%}

{% if request.uri contains 'create_review=true' and product.customer_has_reviewed == false and product.reviews_are_enabled  %}

    {%- assign sectionTitle = 'product.write_product_review' | t -%}
    {%- assign sectionSubtitle = product.name -%}

    {% render 'section', sectionTitle: sectionTitle, sectionSubtitle: sectionSubtitle, sectionContent: sectionContent, sectionContentContainer: 'tiny', sectionOverlay: true %}

