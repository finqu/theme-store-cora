                                    {% assign itemPrice = product.net_price %}
                                    {% assign itemOriginalPrice = product.original_net_price %}
                                    {% assign itemTaxPercent = 0 %}
                                {%- else -%}
                                    {% assign itemPrice = product.price %}
                                    {% assign itemOriginalPrice = product.original_price %}
                                    {% assign itemTaxPercent = product.taxpercent | round %}
                                {%- endif -%}

                                {% if product.has_discount %}

                                    <span class="product-sale-price-text text-sale-price font-weight-bold mr-1" data-product-price-dynamic>
                                        {{ itemPrice | in_currency }}
                                    </span>

                                    <span class="product-price text-decoration-line-through text-muted">
                                        {{ itemOriginalPrice | in_currency }}
                                    </span>

                                {% else %}

                                    <span class="product-price text-price" data-product-price-dynamic>
                                        {{ itemPrice | in_currency }}
                                    </span>

                                {% endif %}

                            </div>

                            <div class="product-vat">

                                <span class="product-vat-text text-muted">
                                    {{ 'product.vat_included_dynamic' | t, amount: itemTaxPercent }}
                                </span>

                            </div>

