                    {% if product.review_count > 0 and product.reviews_are_enabled %}

                        <div class="product-review-rating">

                            <button type="button" id="product-show-reviews" class="btn btn-text">

                                <div class="product-review-icons">

                                    {% for rating in (1..product.max_rating) %}

                                        <div class="product-review-icon">

                                            {% if product.rating >= rating %}

                                                {%- render 'icon', icon: 'bold/rating-star' -%}

                                            {% else %}

                                                {%- render 'icon', icon: 'regular/rating-star' -%}

                                            {% endif %}

                                        </div>

                                    {% endfor %}

                                </div>

                                <span class="product-review-text">
                                    {{ product.review_count }}
                                </span>

                            </button>

