        {%- assign imgSizeMd = '320,463' -%}

        {% if contentImgSide == 'left' %}

            {%- case leftColSize -%}
                {% when 6 %}
                    {%- assign imgSizeLg = '630,910' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,588' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,1233' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,749' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,1072' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,427' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,1394' -%}
            {%- endcase -%}

        {% else %}

            {%- case rightColSize -%}
                {% when 6 %}
                    {%- assign imgSizeLg = '630,910' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,588' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,1233' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,749' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,1072' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,427' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,1394' -%}
            {%- endcase -%}

        {% endif %}

    {% elsif section.settings.contentImgAspectRatio == '4:3' %}

        {%- assign imgSizeSm = '374,281' -%}
        {%- assign imgSizeMd = '320,240' -%}

        {% if contentImgSide == 'left' %}

            {%- case leftColSize -%}
                {% when 6 %}
                    {%- assign imgSizeLg = '630,473' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,305' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,640' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,389' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,557' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,222' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,724' -%}
            {%- endcase -%}

        {% else %}

            {%- case rightColSize -%}
                {% when 6 %}
                    {%- assign imgSizeLg = '630,473' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,305' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,640' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,389' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,557' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,222' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,724' -%}
            {%- endcase -%}

        {% endif %}

    {% elsif section.settings.contentImgAspectRatio == '1:1' %}

        {%- assign imgSizeSm = '374,374' -%}
        {%- assign imgSizeMd = '320,320' -%}

        {% if contentImgSide == 'left' %}

            {%- case leftColSize -%}
                {% when 6 %}
                    {%- assign imgSizeLg = '630,630' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,407' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,854' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,519' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,742' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,295' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,965' -%}
            {%- endcase -%}

        {% else %}

            {%- case rightColSize -%}
                {% when 6 %}
                    {%- assign imgSizeLg = '630,630' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,407' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,854' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,519' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,742' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,295' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,965' -%}
            {%- endcase -%}

        {% endif %}

    {% endif %}

    <div class="aspect-ratio-{{ section.settings.contentImgAspectRatio | replace: ':', '-' }}">

        {% if imgSrc %}

            <div class="aspect-ratio-container">

                <picture>
                    <source media="(min-width: 992px)" data-srcset="
                        {{ imgSrc | thumb: imgSizeLg }} 1x,
                        {{ imgSrc | thumb: imgSizeLg | thumb:'@2x' }} 2x">

                    <source media="(min-width: 753px)" data-srcset="
                        {{ imgSrc | thumb: imgSizeLg }} 1x,
                        {{ imgSrc | thumb: imgSizeLg | thumb:'@2x' }} 2x">

                    <source data-srcset="
                        {{ imgSrc | thumb: imgSizeSm }} 1x,
                        {{ imgSrc | thumb: imgSizeSm | thumb:'@2x' }} 2x">

                    <img
                        alt="{{ section.settings.contentImgAlt }}"
                        data-src="{{ imgSrc | thumb: imgSizeSm }}"
                        data-srcset="{{ imgSrc | thumb: imgSizeSm }} 1x,{{ imgSrc | thumb: imgSizeSm | thumb:'@2x' }} 2x"
                        class="lazy aspect-ratio-item {% if section.settings.contentImgFit %}aspect-ratio-item-cover{% else %}aspect-ratio-item-contain{% endif %}{% if section.settings.contentImgEffect != 'none' %} {{ section.settings.contentImgEffect }}{% endif %}"
                        data-finqu-inline-editor="contentImgSrc">
                </picture>

            </div>

        {% elsif request.design_mode %}

            <div class="aspect-ratio-container" data-finqu-inline-editor="contentImgSrc">

                {%- capture class -%}
                    aspect-ratio-item{% if section.settings.contentImgEffect != 'none' %} {{ section.settings.contentImgEffect }}{% endif %}
                {%- endcapture -%}

                {% render 'placeholder-svg', type: 'image', class: class %}

            </div>

        {% endif %}

    </div>

{%- endcapture -%}

{%- capture textColContent -%}

    <div data-finqu-inline-editor="contentRichtextHtml">{{ section.settings.contentRichtextHtml }}</div>

    {% if section.settings.contentBtnLabel %}

        {% if section.settings.contentBtnStyle == 'btn1' %}

            <a href="{{- section.settings.contentBtnResource.url -}}" class="btn btn-section mt-3">
                {{- section.settings.contentBtnLabel -}}
            </a>

        {% elsif section.settings.contentBtnStyle == 'btn2' %}

            <a href="{{- section.settings.contentBtnResource.url -}}" class="btn btn-outline-section mt-3">
                {{- section.settings.contentBtnLabel -}}
            </a>

        {% else %}

            <a href="{{- section.settings.contentBtnResource.url -}}" class="btn btn-link text-underline-indicator font-weight-bold mt-3">

                <span class="mr-2">
                    {{- section.settings.contentBtnLabel -}}
                </span>

                {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
            </a>

        {% endif %}

    {% endif %}

{%- endcapture -%}

{%- capture sectionContent -%}

    {%- case section.settings.contentImgAlign -%}
        {% when 'top' %}
            {%- assign imgAlign = 'align-self-start' -%}
        {% when 'middle' %}
            {%- assign imgAlign = 'align-self-center' -%}
        {% when 'bottom' %}
            {%- assign imgAlign = 'align-self-end' -%}
    {%- endcase -%}

    {%- case section.settings.contentRichtextAlign -%}
        {% when 'top' %}
            {%- assign textAlign = 'align-self-start' -%}
        {% when 'middle' %}
            {%- assign textAlign = 'align-self-center' -%}
        {% when 'bottom' %}
            {%- assign textAlign = 'align-self-end' -%}
    {%- endcase -%}

    <div class="row">

        {%- if section.settings.contentImgSide == 'left' -%}

            <div class="col-12 col-md-6 col-lg-{{ leftColSize }} {{ imgAlign }}">

                {% if section.settings.contentImgAspectRatio != 'off' %}
                    {{ imgColContentWithAspectRatio }}
                {% else %}
                    {{- imgColContent -}}
                {% endif %}

            </div>

            <div class="col-12 pt-5 pt-md-0 col-md-6 col-lg-{{ rightColSize }} {{ textAlign }}">
                {{- textColContent -}}
            </div>

        {%- else -%}

            <div class="col-12 pt-5 pt-md-0 col-md-6 col-lg-{{ leftColSize }} {{ textAlign }} order-2 order-md-1">
                {{- textColContent -}}
            </div>

            <div class="col-12 col-md-6 col-lg-{{ rightColSize }} {{ imgAlign }} order-1 order-md-2">

                {% if section.settings.contentImgAspectRatio != 'off' %}
                    {{ imgColContentWithAspectRatio }}
                {% else %}
                    {{- imgColContent -}}
                {% endif %}

            </div>

        {%- endif -%}

    </div>

{%- endcapture -%}

