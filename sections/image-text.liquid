                {% when 6 %}
                    {%- assign imgSizeLg = '630,355' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,229' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,480' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,292' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,418' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,166' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,543' -%}
            {%- endcase -%}

        {% else %}

            {%- case rightColSize -%}
                {% when 6 %}
                    {%- assign imgSizeLg = '630,910' -%}
                {% when 4 %}
                    {%- assign imgSizeLg = '407,588' -%}
                {% when 8 %}
                    {%- assign imgSizeLg = '854,1233' -%}
                {% when 5 %}
                    {%- assign imgSizeLg = '519,749' -%}
                {% when 7 %}
                    {%- assign imgSizeLg = '742,1072' -%}
                {% when 3 %}
                    {%- assign imgSizeLg = '295,427' -%}
                {% when 9 %}
                    {%- assign imgSizeLg = '965,1394' -%}
            {%- endcase -%}

