{%- assign sectionTitle = section.settings.sectionTitle -%}
{%- assign sectionTitleTag = section.settings.sectionTitleTag -%}
{%- assign sectionSubtitle = section.settings.sectionSubtitle -%}
{%- assign sectionSubtitleTag = section.settings.sectionSubtitleTag -%}
{%- assign sectionHeaderTextAlign = section.settings.sectionHeaderTextAlign -%}
{%- assign sectionHeight = section.settings.sectionHeight | default: settings.sectionHeight -%}

{%- if section.settings.setting_blocks.items.size > 0 -%}

    {%- assign items = section.settings.setting_blocks.items -%}
    {%- assign itemAmount = items | size -%}

{%- else -%}

    {%- case section.settings.listType -%}
        {% when 'discounted' %}
            {%- assign items = products.discounted -%}
        {% when 'new' %}
            {%- assign items = products.new_products -%}
        {% when 'recent' %}
            {%- assign items = products.recent -%}
        {% when 'tag' %}
            {%- assign items = products.tags[section.settings.tagId] -%}
        {% when 'category' %}
            {%- assign items = categories[section.settings.category.id].products -%}
        {% when 'manufacturer' %}
            {%- assign items = manufacturers[section.settings.manufacturer.id].products -%}
    {%- endcase -%}

    {%- assign itemAmount = section.settings.itemAmount -%}

{%- endif -%}

{%- capture sectionContent -%}

    {% render 'product-carousel', items: items, pagination: section.settings.pagination, navigation: section.settings.navigation, itemAmount: itemAmount, itemsPerView: section.settings.itemsPerView, style: section.settings.carouselStyle, productShowBadges: section.settings.showBadges, productShowManufacturer: section.settings.showManufacturer, productShowName: section.settings.showProductName, productShowPricing: section.settings.showPricing, productShowAddToCart: section.settings.showAddToCart %}

{%- endcapture -%}

