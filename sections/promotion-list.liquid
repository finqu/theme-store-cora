{%- assign sectionSubtitleTag = section.settings.sectionSubtitleTag -%}
{%- assign sectionHeaderTextAlign = section.settings.sectionHeaderTextAlign -%}

{%- capture sectionContent -%}

    {%- if section.settings.promotionLayout == '1' -%}

        {%- render 'promotions/layout-1', section: section -%}

    {%- elsif section.settings.promotionLayout == '2' -%}

        {%- render 'promotions/layout-2', section: section -%}

    {%- elsif section.settings.promotionLayout == '3' -%}

        {%- render 'promotions/layout-3', section: section -%}

    {%- elsif section.settings.promotionLayout == '4' -%}

        {%- render 'promotions/layout-4', section: section -%}

    {%- elsif section.settings.promotionLayout == '5' -%}

        {%- render 'promotions/layout-5', section: section -%}

    {% endif %}

{%- endcapture -%}

{% render 'section', section: section, sectionContent: sectionContent, sectionTitle: sectionTitle, sectionTitleTag: sectionTitleTag, sectionSubtitle: sectionSubtitle, sectionSubtitleTag: sectionSubtitleTag, sectionHeaderTextAlign: sectionHeaderTextAlign %}

