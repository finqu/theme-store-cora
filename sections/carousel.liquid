{%- assign sectionTitle = section.settings.sectionTitle -%}
{%- assign sectionTitleTag = section.settings.sectionTitleTag -%}
{%- assign sectionSubtitle = section.settings.sectionSubtitle -%}
{%- assign sectionSubtitleTag = section.settings.sectionSubtitleTag -%}
{%- assign sectionHeaderTextAlign = section.settings.sectionHeaderTextAlign -%}
{%- assign sectionHeight = section.settings.sectionHeight | default: settings.sectionHeight -%}

{%- assign carouselClasses = '' -%}

{%- capture carouselSettings -%}
    data-carousel-pagination="{{- section.settings.pagination -}}" data-carousel-items-per-view="{{- section.settings.itemsPerView -}}"
{%- endcapture -%}

{%- if section.settings.pagination == 'hover' -%}
    {% capture paginationHoverClass %} swiper-pagination-hover{% endcapture %}
    {%- assign carouselClasses = carouselClasses | append: paginationHoverClass -%}
{%- endif -%}

{%- if section.settings.navigation == 'hover' -%}
    {% capture navigationHoverClass %} swiper-navigation-hover{% endcapture %}
    {%- assign carouselClasses = carouselClasses | append: navigationHoverClass -%}
{%- endif -%}

{%- case section.settings.itemsPerView -%}

    {%- when '2' -%}
        {%- assign imgSize = '560,560' -%}

    {%- when '3' -%}
        {%- assign imgSize = '360,360' -%}

    {%- when '4' -%}
        {%- assign imgSize = '260,260' -%}

    {%- when '5' -%}
        {%- assign imgSize = '200,200' -%}

    {%- when '6' -%}
        {%- assign imgSize = '160,160' -%}

{%- endcase -%}

<style>
    #finqu-section-{{ section.id }} .slide-text {
        color: {{ section.settings.slideTextColor }};
    }
</style>

{%- capture content -%}

    {% for item in section.settings.setting_blocks.items %}

        {%- assign imgSrc = item.settings.imgSrc -%}

        {%- capture slideContent -%}

            {%- if section.settings.slideImgOverlay and item.settings.imgSrc and item.settings.imgFit -%}
                <style>
                    #finqu-section-{{ section.id }} .swiper-slide-{{ forloop.index }}::after {
                        content: '';
                        position: absolute;
                        left: 0;
                        top: 0;
                        right: 0;
                        bottom: 0;
                        z-index: 1;
                        background: linear-gradient(0deg, rgb(0,0,0, {{ section.settings.slideImgOverlay }}%), rgb(0,0,0, {{ section.settings.slideImgOverlay }}%))
                    }
                </style>
            {%- endif -%}

            <div class="slide-text-container">

                <{{ section.settings.slideTitleTag }} class="slide-text">
                    {{ item.settings.text }}
                </{{ section.settings.slideTitleTag }}>

            </div>

            <div class="aspect-ratio-1-1">

                <div class="aspect-ratio-container">

                    {% if imgSrc %}

                        <picture>
                            <img
                                alt="{{ item.settings.imgAlt }}"
                                data-src="{{ imgSrc | thumb: imgSize }}"
                                data-srcset="{{ imgSrc | thumb: imgSize }} 1x,{{ imgSrc | thumb: imgSize | thumb:'@2x' }} 2x"
                                class="lazy aspect-ratio-item {% if item.settings.imgFit %}aspect-ratio-item-cover{% else %}aspect-ratio-item-contain{% endif %}{% if item.settings.imgEffect != 'none' %} {{ item.settings.imgEffect }}{% endif %}">

                        </picture>

                    {% else %}

                        {%- capture class -%}
                            aspect-ratio-item{% if item.settings.imgEffect != 'none' %} {{ item.settings.imgEffect }}{% endif %}
                        {%- endcapture -%}

                        {% render 'placeholder-svg', type: 'image', class: class %}

                    {% endif %}

                </div>

            </div>

        {% endcapture %}

        <div class="swiper-slide swiper-slide-{{ forloop.index }}">

            {% if item.settings.resource.url %}

                <a href="{{- item.settings.resource.url -}}"{% if item.settings.resourceOpenInNewWindowStatus %} target="_blank"{% endif %}>

                    {{ slideContent }}

                </a>

            {% else %}

                {{ slideContent }}

            {% endif%}

        </div>

    {% endfor %}

{%- endcapture -%}

{%- capture sectionContent -%}

    <div class="swiper carousel-style-{{ section.settings.carouselStyle }}{{ carouselClasses }}" {{ carouselSettings }}>

        <div class="swiper-wrapper">

            {{- content -}}

        </div>

        {%- if section.settings.navigation -%}

            <div class="swiper-button-prev">
                {%- render 'icon', icon: 'light/arrow-left-1' -%}
            </div>

            <div class="swiper-button-next">
                {%- render 'icon', icon: 'light/arrow-right-1' -%}
            </div>

        {%- endif -%}

        {%- if section.settings.pagination -%}

            <div class="swiper-pagination"></div>

        {%- endif -%}

    </div>

{%- endcapture -%}

