{%- assign contactTitle = 'contact.title' | t -%}
{%- assign sectionHeaderTextAlign = section.settings.textAlign -%}
{%- assign sectionTitle = section.settings.title | default: contactTitle -%}
{%- assign sectionSubtitle = section.settings.subtitle -%}
{%- assign sectionDescription = section.settings.text -%}

{%- capture hasSocialMediaIcons -%}
    {{ settings.facebookPageUrl | yepnope: 'true', 'false' }},
    {{ settings.instagramPageUrl | yepnope: 'true', 'false' }},
    {{ settings.twitterPageUrl | yepnope: 'true', 'false' }},
    {{ settings.pinterestPageUrl | yepnope: 'true', 'false' }},
    {{ settings.youtubePageUrl | yepnope: 'true', 'false' }}
{%- endcapture -%}

{%- capture sectionContent -%}

    {% if section.settings.contactLayout == 1 %}

        {% render 'section-header', sectionTitle: sectionTitle, sectionSubtitle: sectionSubtitle, sectionHeaderTextAlign: sectionHeaderTextAlign, sectionContentContainer: 'none' %}

        {% if section.settings.text %}

            <div class="text-{{ section.settings.textAlign }} mt-4">

                {{ section.settings.text }}

            </div>

        {% endif %}

        {% if section.settings.showSocialMediaIcons and hasSocialMediaIcons contains 'true' %}

            <div class="social-media-buttons-container mt-4 text-{{ section.settings.textAlign }}">

                {% if settings.facebookPageUrl %}

                    <div class="social-media-btn">

                        {% render 'social-media-button', type: 'facebook', url: settings.facebookPageUrl, style: 'minimal' %}

                    </div>

                {% endif %}

                {% if settings.instagramPageUrl %}

                    <div class="social-media-btn">

                        {% render 'social-media-button', type: 'instagram', url: settings.instagramPageUrl, style: 'minimal' %}

                    </div>

                {% endif %}

                {% if settings.twitterPageUrl %}

                    <div class="social-media-btn">

                        {% render 'social-media-button', type: 'twitter', url: settings.twitterPageUrl, style: 'minimal' %}

                    </div>

                {% endif %}

                {% if settings.pinterestPageUrl %}

                    <div class="social-media-btn">

                        {% render 'social-media-button', type: 'pinterest', url: settings.pinterestPageUrl, style: 'minimal' %}

                    </div>

                {% endif %}

                {% if settings.youtubePageUrl %}

                    <div class="social-media-btn">

                        {% render 'social-media-button', type: 'youtube', url: settings.youtubePageUrl, style: 'minimal' %}

                    </div>

                {% endif %}

            </div>

        {% endif %}

        {% form 'contact', class: 'mt-6' %}

            <div class="row">

                <div class="col-12 col-md form-group">

                    <div class="form-floating">

                        <input type="text" id="{{ section.id }}-contact-name" class="form-control" name="name" placeholder="{{ 'contact.name' | t }}" value="{{ form.submitted.name | escape }}" required>

                        <label for="{{ section.id }}-contact-name">
                            {{ 'contact.name' | t }}
                        </label>

                    </div>

                </div>

                <div class="col-12 col-md form-group">

                    <div class="form-floating">

                        <input type="text" id="{{ section.id }}-contact-email" class="form-control" name="email" placeholder="{{ 'contact.email' | t }}" value="{{ form.submitted.email | escape }}" required>

                        <label for="{{ section.id }}-contact-email">
                            {{ 'contact.email' | t }}
                        </label>

                    </div>

                </div>

            </div>

            {% if section.settings.showPhonenumber or section.settings.showSubject %}

                <div class="row">

                    {% if section.settings.showPhonenumber %}

                        <div class="col-12 col-md form-group">

                            <div class="form-floating">

                                <input type="text" id="{{ section.id }}-contact-phonenumber" class="form-control" name="phonenumber" placeholder="{{ 'contact.phone' | t }}" value="{{ form.submitted.phonenumber | escape }}">

                                <label for="{{ section.id }}-contact-phonenumber">
                                    {{ 'contact.phone' | t }}
                                </label>

                            </div>

                        </div>

                    {% endif %}

                    {% if section.settings.showSubject %}

                        <div class="col-12 col-md form-group">

                            <div class="form-floating">

                                <input type="text" class="form-control" id="{{ section.id }}-contact-subject" name="subject" placeholder="{{ 'contact.subject' | t }}" value="{{ form.submitted.subject | escape }}">

                                <label for="{{ section.id }}-contact-subject">
                                    {{ 'contact.subject' | t }}
                                </label>

                            </div>

                        </div>

                    {% endif %}

                </div>

            {% endif %}

            <div class="form-group">

                <textarea name="message" class="form-control" rows="5" placeholder="{{ 'contact.message' | t }}" required>{{ form.submitted.message | escape }}</textarea>

            </div>

            {% render 'form-error', error: form.error, class: 'form-group' %}

            <button type="submit" class="btn btn-section btn-block">
                {{ 'contact.cta' | t }}
            </button>

            {% if form.posted_successfully? %}

                <span class="d-block font-weight-bold text-center mt-4">

                    {{ 'contact.success' | t }}

                </span>

            {% endif %}

        {% endform %}

    {% elsif section.settings.contactLayout == 2 %}

        <div class="row align-items-center">

            <div class="col-12 col-md mb-4 mb-md-0">

                {% render 'section-header', sectionTitle: sectionTitle, sectionSubtitle: sectionSubtitle, sectionHeaderTextAlign: sectionHeaderTextAlign, sectionContentContainer: 'none' %}

                {% if section.settings.text %}

                    <div class="text-{{ section.settings.textAlign }} mt-4">

                        {{ section.settings.text }}

                    </div>

                {% endif %}

                {% if section.settings.showSocialMediaIcons and hasSocialMediaIcons contains 'true' %}

                    <div class="social-media-buttons-container mt-4 text-{{ section.settings.textAlign }}">

                        {% if settings.facebookPageUrl %}

                            <div class="social-media-btn">

                                {% render 'social-media-button', type: 'facebook', url: settings.facebookPageUrl, style: 'minimal' %}

                            </div>

                        {% endif %}

                        {% if settings.instagramPageUrl %}

                            <div class="social-media-btn">

                                {% render 'social-media-button', type: 'instagram', url: settings.instagramPageUrl, style: 'minimal' %}

                            </div>

                        {% endif %}

                        {% if settings.twitterPageUrl %}

                            <div class="social-media-btn">

                                {% render 'social-media-button', type: 'twitter', url: settings.twitterPageUrl, style: 'minimal' %}

                            </div>

                        {% endif %}

                        {% if settings.pinterestPageUrl %}

                            <div class="social-media-btn">

                                {% render 'social-media-button', type: 'pinterest', url: settings.pinterestPageUrl, style: 'minimal' %}

                            </div>

                        {% endif %}

                        {% if settings.youtubePageUrl %}

                            <div class="social-media-btn">

                                {% render 'social-media-button', type: 'youtube', url: settings.youtubePageUrl, style: 'minimal' %}

                            </div>

                        {% endif %}

                    </div>

                {% endif %}

            </div>

            <div class="col-12 col-md">

                {% form 'contact' %}

                    <div class="form-group">

                        <div class="form-floating">

                            <input type="text" id="{{ section.id }}-contact-name" class="form-control" name="name" placeholder="{{ 'contact.name' | t }}" value="{{ form.submitted.name | escape }}" required>

                            <label for="{{ section.id }}-contact-name">
                                {{ 'contact.name' | t }}
                            </label>

                        </div>

                    </div>

                    <div class="form-group">

                        <div class="form-floating">

                            <input type="text" id="{{ section.id }}-contact-email" class="form-control" name="email" placeholder="{{ 'contact.email' | t }}" value="{{ form.submitted.email | escape }}" required>

                            <label for="{{ section.id }}-contact-email">
                                {{ 'contact.email' | t }}
                            </label>

                        </div>

                    </div>

                    {% if section.settings.showPhonenumber %}

                        <div class="form-group">

                            <div class="form-floating">

                                <input type="text" id="{{ section.id }}-contact-phonenumber" class="form-control" name="phonenumber" placeholder="{{ 'contact.phone' | t }}" value="{{ form.submitted.phonenumber | escape }}">

                                <label for="{{ section.id }}-contact-phonenumber">
                                    {{ 'contact.phone' | t }}
                                </label>

                            </div>

                        </div>

                    {% endif %}

                    {% if section.settings.showSubject %}

                        <div class="form-group">

                            <div class="form-floating">

                                <input type="text" class="form-control" id="{{ section.id }}-contact-subject" name="subject" placeholder="{{ 'contact.subject' | t }}" value="{{ form.submitted.subject | escape }}">

                                <label for="{{ section.id }}-contact-subject">
                                    {{ 'contact.subject' | t }}
                                </label>

                            </div>

                        </div>

                    {% endif %}

                    <div class="form-group">

                        <textarea name="message" class="form-control" rows="5" placeholder="{{ 'contact.message' | t }}" required>{{ form.submitted.message | escape }}</textarea>

                    </div>

                    {% render 'form-error', error: form.error, class: 'form-group' %}

                    <button type="submit" class="btn btn-section btn-block">
                        {{ 'contact.cta' | t }}
                    </button>

                    {% if form.posted_successfully? %}

                        <span class="d-block font-weight-bold text-center mt-4">

                            {{ 'contact.success' | t }}

                        </span>

                    {% endif %}

                {% endform %}

            </div>

        </div>

    {% endif %}

{%- endcapture -%}

