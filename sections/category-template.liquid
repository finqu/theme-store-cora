{%- assign sectionTitle = category.title -%}
{%- assign sectionDescription = category.description -%}
{%- assign sectionBreadcrumbs = category.breadcrumbs -%}
{%- assign itemCount = category.product_count -%}
{%- assign subCategories = category.sub_categories -%}
{%- assign activeSortOption = category.sort_by | default: category.default_sort_by -%}
{%- assign sortOptions = category.sort_options -%}

{%- capture sectionContent -%}

    {%- paginate category.products by 100 -%}

        {% if subCategories %}

            <div class="category-tags pb-4">

                <div class="swiper-container py-1">

                    <div class="swiper-wrapper">

                        {% for subCategory in subCategories %}

                            <div class="swiper-slide">

                                <div class="category-tag">

                                    <a href="{{ subCategory | page_url }}">

                                        <span class="category-tag-content">
                                            {{ subCategory.title }}
                                        </span>
                                    </a>

                                </div>

                            </div>

                        {% endfor %}

                    </div>

                    <div class="swiper-button-prev">
                        {%- render 'icon', icon: 'arrow-left-1-itskPx' -%}
                    </div>

                    <div class="swiper-button-next">
                        {%- render 'icon', icon: 'arrow-right-1-Ei8Dl0' -%}
                    </div>

                </div>

            </div>

        {% endif %}

        <div class="row">

            <div class="col-auto">

                <span class="text-muted">
                    {% if itemCount == 1 %}
                        {{ 'general.product_count' | t: amount: itemCount }}
                    {% else %}
                        {{ 'general.product_plural_count' | t: amount: itemCount }}
                    {% endif %}
                </span>

            </div>

            <div class="col text-right">

                <div class="dropdown">

                    <button type="button" class="btn btn-text text-muted" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                        <span class="mr-1">

                            {% for option in sortOptions %}

                                {% if option == activeSortOption %}
                                    {{ option | prepend: 'filters.sort-by.' | t }}
                                {% endif %}

                            {% endfor %}

                        </span>

                        {%- render 'icon', icon: 'arrow-down-1-dzphtd' -%}

                    </button>

                    <div class="dropdown-menu dropdown-menu-right">

                        {% for option in sortOptions %}

                            <button type="button" class="sort-by-action dropdown-item" value="{{ option }}">
                                {{ option | prepend: 'filters.sort-by.' | t }}
                            </button>

                        {% endfor %}

                    </div>

                </div>

            </div>

        </div>

        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-3 row-cols-lg-{{ section.settings.itemsPerRow }}">

            {% for product in category.products %}

                <div class="col pt-3 pb-4">

                    {%- render 'product-card-grid', product: product, wishlist: 'toggle', itemsPerRow: section.settings.itemsPerRow, showBadges: section.settings.showBadges, showManufacturer: section.settings.showManufacturer, showProductName: section.settings.showProductName, showPricing: section.settings.showPricing -%}

                </div>

            {% endfor %}

        </div>

        {% render 'pagination', paginate: paginate %}

    {%- endpaginate -%}

{%- endcapture -%}

{% render 'section', section: section, sectionContent: sectionContent, sectionTitle: sectionTitle, sectionSubtitle: sectionSubtitle, sectionDescription: sectionDescription, sectionBreadcrumbs: sectionBreadcrumbs %}

{% schema %}
{
    "name": {
        "en": "Category",
        "fi": "Tuoteryhmä"
    },
    "tag": "section",
    "class": "section section-category",
    "is_creatable": false,
    "settings": {
        "list_type": "tabs",
        "groups": [
            {
                "title": {
                    "en": "General",
                    "fi": "Yleinen"
                },
                "settings": [
                    {
                        "id": "itemsPerRow",
                        "label": {
                            "en": "Products per row",
                            "fi": "Tuotteita per rivi"
                        },
                        "type": "range",
                        "min": 2,
                        "max": 6,
                        "step": 1,
                        "default": 4,
                        "unit": " "
                    },
                    {
                        "id": "showBadges",
                        "type": "checkbox",
                        "label": {
                            "en": "Show badges",
                            "fi": "Näytä merkit"
                        },
                        "default": true
                    },
                    {
                        "id": "showManufacturer",
                        "type": "checkbox",
                        "label": {
                            "en": "Show manufacturer",
                            "fi": "Näytä valmistaja"
                        },
                        "default": true
                    },
                    {
                        "id": "showProductName",
                        "type": "checkbox",
                        "label": {
                            "en": "Show product name",
                            "fi": "Näytä tuotteen nimi"
                        },
                        "default": true
                    },
                    {
                        "id": "showPricing",
                        "type": "checkbox",
                        "label": {
                            "en": "Show price infomration",
                            "fi": "Näytä hintatiedot"
                        },
                        "default": true
                    }
                ]
            }
        ]
    }
}
{% endschema %}