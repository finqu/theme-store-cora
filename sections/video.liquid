{%- assign sectionTitle = section.settings.sectionTitle -%}
{%- assign sectionTitleTag = section.settings.sectionTitleTag -%}
{%- assign sectionSubtitle = section.settings.sectionSubtitle -%}
{%- assign sectionSubtitleTag = section.settings.sectionSubtitleTag -%}
{%- assign sectionHeaderTextAlign = section.settings.textAlign -%}
{%- assign sectionContentContainer = 'fixed' -%}
{%- assign sectionHeight = '' -%}
{%- assign sectionHeightCustomTop = '' -%}
{%- assign sectionHeightCustomBottom = '' -%}
{%- assign videoSrc = '' -%}
{%- assign videoType = 'video' -%}

{%- if section.settings.videoSrc -%}

    {%- if section.settings.videoSrc contains 'youtube.com' -%}

        {%- assign videoType = 'iframe' -%}
        {%- assign queryParams = section.settings.videoSrc | query_params -%}
        {%- assign videoId = queryParams.v -%}

        {%- if videoId -%}

            {%- assign videoSrc = 'https://www.youtube-nocookie.com/embed/' | append: videoId -%}

            {%- capture params -%}
                autoplay={{ section.settings.videoAutoplay | yepnope: 1, 0 }}&rel=0&modestbranding=1&playsinline=1&controls={{ section.settings.videoControls | yepnope: 1, 0 }}
            {%- endcapture -%}

            {%- assign params = params | strip -%}
            {%- assign videoSrc = videoSrc | build_query: params-%}

        {%- endif -%}

    {%- elsif section.settings.videoSrc contains 'vimeo.com' -%}

        {%- assign videoType = 'iframe' -%}
        {%- assign videoId =  section.settings.videoSrc | split: '/' | last -%}

        {%- if videoId -%}

            {%- assign videoSrc = 'https://player.vimeo.com/video/' | append: videoId -%}

            {%- capture params -%}
                autoplay={{ section.settings.videoAutoplay | yepnope: 1, 0 }}&playsinline=0&controls={{ section.settings.videoControls | yepnope: 1, 0 }}
            {%- endcapture -%}

            {%- assign params = params | strip -%}
            {%- assign videoSrc = videoSrc | build_query: params-%}

        {%- endif -%}

    {%- endif -%}

{%- endif -%}

{%- capture sectionContent -%}

    {% if section.settings.videoLayout == 1 %}

        <div class="row align-items-center">

            <div class="col-12 col-md mb-4 mb-md-0">

                {% if videoSrc %}

                    {% if videoType == 'iframe' %}

                        <div class="embed-responsive embed-responsive-16by9">

                          <iframe class="lazy embed-responsive-item" data-src="{{ videoSrc }}" frameborder="0" allowfullscreen></iframe>

                        </div>

                    {% else %}

                        <div class="embed-responsive embed-responsive-16by9">

                            <video class="lazy embed-responsive-item" data-src="{{ videoSrc }}"{% if section.settings.videoControls %} controls{% endif %}{% if section.settings.videoAutoplay %} autoplay{% endif %}></video>

                        </div>

                    {% endif %}

                {% else %}

                    <div class="aspect-ratio-16-9">

                        <div class="aspect-ratio-container">

                            {% render 'placeholder-svg', type: 'image', class: 'aspect-ratio-item' %}

                        </div>

                    </div>

                {% endif %}

            </div>

            <div class="col-12 col-md">

                {% render 'section-header', sectionTitle: sectionTitle, sectionSubtitle: sectionSubtitle, sectionHeaderTextAlign: sectionHeaderTextAlign, sectionContentContainer: 'none' %}

                {% if section.settings.text %}

                    <div class="text-{{ section.settings.textAlign }}{% if sectionTitle or sectionSubtitle %} mt-4{% endif %}">

                        {{ section.settings.text }}

                    </div>

                {% endif %}

                {% if section.settings.btnLabel %}

                    <div class="text-{{ section.settings.textAlign }}">

                        {% if section.settings.btnStyle == 'btn1' %}

                            <a href="{{- section.settings.btnResource.url -}}" class="btn btn-section mt-3">
                                {{- section.settings.btnLabel -}}
                            </a>

                        {% elsif section.settings.btnStyle == 'btn2' %}

                            <a href="{{- section.settings.btnResource.url -}}" class="btn btn-outline-section mt-3">
                                {{- section.settings.btnLabel -}}
                            </a>

                        {% else %}

                            <a href="{{- section.settings.btnResource.url -}}" class="btn btn-link text-underline-indicator font-weight-bold mt-3">

                                <span class="mr-2">
                                    {{- section.settings.btnLabel -}}
                                </span>

                                {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
                            </a>

                        {% endif %}

                    </div>

                {% endif %}

            </div>

        </div>

    {% elsif section.settings.videoLayout == 2 %}

        <div class="row align-items-center">

            <div class="col-12 col-md mb-4 mb-md-0">

