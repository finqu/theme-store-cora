                {% if section.settings.btnStyle == 'btn1' %}

                    <a href="{{- section.settings.btnResource.url -}}" class="btn btn-section mt-3">
                        {{- section.settings.btnLabel -}}
                    </a>

                {% elsif section.settings.btnStyle == 'btn2' %}

                    <a href="{{- section.settings.btnResource.url -}}" class="btn btn-outline-section mt-3">
                        {{- section.settings.btnLabel -}}
                    </a>

                {% else %}

                    <a href="{{- section.settings.btnResource.url -}}" class="btn btn-link text-underline-indicator font-weight-bold mt-3">

                        <span class="mr-2">
                            {{- section.settings.btnLabel -}}
                        </span>

                        {%- render 'icon', icon: 'regular/arrow-right', class: 'svg-icon-fw' -%}
