                    <video class="lazy embed-responsive-item" data-src="{{ videoSrc }}"{% if section.settings.videoControls %} controls{% endif %}{% if section.settings.videoAutoplay %} autoplay{% endif %}></video>

                </div>

            {% endif %}

        {% else %}

            <div class="mt-6 aspect-ratio-16-9">

                <div class="aspect-ratio-container">

                    {% render 'placeholder-svg', type: 'image', class: 'aspect-ratio-item' %}

                </div>

            </div>

        {% endif %}

    {% elsif section.settings.videoLayout == 4 %}

        {%- assign sectionContentContainer = 'none' -%}
        {%- assign sectionHeight = 'custom' -%}
        {%- assign sectionHeightCustomTop = '0' -%}
        {%- assign sectionHeightCustomBottom = '0' -%}

        {% if videoSrc %}

            {% if videoType == 'iframe' %}

