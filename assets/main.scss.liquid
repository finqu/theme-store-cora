// Text
$font-size-base: 1rem * {{- settings.textScale -}};
$font-family-base: {{- settings.bodyTextFont -}};
$headings-font-family: {{- settings.headingFont -}};
$subheadings-font-family: {{- settings.subheadingFont -}};
$btn-font-family: {{- settings.buttonFont -}};
$font-weight-light: 300;
$font-weight-normal: 400;
$font-weight-bold: 700;


// Buttons
$btn-border-radius: {{- settings.buttonBorderRadius -}};


// Common
$grid-gutter-width: 40px;
$background-positions: left top, left center, left bottom, right top, right center, right bottom, center top, center center, center bottom !default;


// Carousel
$carousel-heights: (
	sm: 400px,
	md: 600px,
	lg: 800px,
	xl: 945px
);


// Section
$section-spacers-content: (
	sm: 10px,
	md: 20px,
	lg: 25px,
	xl: 50px
) !default;

$section-spacers-height: (
	sm: 35px,
	md: 50px,
	lg: 80px,
	xl: 120px
) !default;

$section-spacers-inner: (
	sm: 15px,
	md: 30px,
	lg: 60px,
	xl: 90px
) !default;

